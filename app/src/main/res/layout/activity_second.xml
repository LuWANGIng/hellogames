<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/textView"
            android:text="@string/gameInfo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_bright"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/img_sudoku"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:id="@+id/textView2"
            android:text="@string/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/guideline6"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:id="@+id/textView3"
            android:text="     "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@id/guideline3"
            android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/textView4"
            android:text="@string/type_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/guideline6"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
    <TextView
            android:id="@+id/textView5"
            android:text="   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/textView4"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            android:layout_marginTop="8dp" />
    <TextView
            android:id="@+id/textView6"
            android:text="@string/playerNb_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/guideline6"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            />
    <TextView
            android:id="@+id/textView7"
            android:text="   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/textView6"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/textView8"
            android:text="@string/year_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/guideline6"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:id="@+id/textView9"
            android:text="   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/textView8"
            app:layout_constraintTop_toBottomOf="@id/textView7"
            android:layout_marginTop="8dp" />
    <Button
            android:text="DO YOU WANT TO KNOW MORE?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline3" app:layout_constraintGuide_begin="60dp"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline4" app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline5" app:layout_constraintGuide_percent="0.8"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline6" app:layout_constraintGuide_percent="0.5"/>
    <TextView
            android:id="@+id/textView10"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"/>
</android.support.constraint.ConstraintLayout>